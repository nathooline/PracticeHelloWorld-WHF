<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ff4bff9d"
        android:gravity="center">

        <Button
            android:id="@+id/greet_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Say hello!"
            android:padding="40dp"
            android:background="#fffff753"
            android:onClick="onClick_sayHello" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:padding="20dp"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:background="#ffff3a74">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#ff35a6ff"
            android:layout_marginRight="20dp"
            android:gravity="center">

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:id="@+id/hello_text"
             android:text="@string/msg1"
             android:textSize="25sp"
             android:textColor="#fff"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:background="#ffff5548"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/world_text"
                android:textSize="25sp"
                android:text="@string/msg2"/>


        </LinearLayout>

        </LinearLayout>
</LinearLayout>